{% layout none %}

{%- if cart.item_count > 0 -%}
  <form action="{{ routes.cart_url }}" method="post" class="min-h-full flex-col flex">

    <div class="products">

      {%- for item in cart.items -%}

        {% render 'cart-item', item: item %}

      {%- endfor -%}

    </div>

    {% render 'cart-checkout' %}
  
  </form>
{%- else -%}
  <div>
    <h3>Din kurv er tom...</h3>
    <a class="font-medium border-b-[1px] border-b-ocean-500" href="{{ shop.url }}/collections/all">Shop nu</a>
  </div>
{%- endif -%}