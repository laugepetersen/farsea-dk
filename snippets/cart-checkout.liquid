<div class="mb-0">
  <div class="price pt-6 pb-6 border-t-solid border-t-gray-border border-t-[1px]">
    <div class="subtotal flex justify-between">
      <p class="font-bold mb-0">Subtotal:</p>
      <p class="mb-0">{{ cart.checkout_charge_amount | money }}</p>
    </div>
  </div>

  <div class="checkout">
    {% comment %} <a href="{{ shop.url }}/cart" class="font-bold block w-full text-center my-4 hover:underline">Se Kurv</a> {% endcomment %}
    <input name="checkout" type="submit" value="Checkout" class="button secondary block w-full text-center hover:cursor-pointer hover:bg-ocean-400 transition-all">
  </div>
</div>