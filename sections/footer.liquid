{% assign logoWidth = section.settings.logo_width %}
{% assign logoClass = 'footer-logo w-[{{ logoWidth }}] max-w-[200px] object-contain block' %}

<footer class="bg-ocean-500 text-white py-10">

  <div class="container">

    <div class="flex justify-between items-center">

      {% if section.settings.logo %}
        {{ section.settings.logo | image_url: width: 300 | image_tag: class: logoClass }}
      {% else %}
        <h3>Logo Missing</h3>
      {% endif %}

      <div class="md:text-right">

        <div class="flex -mx-3 text-sm">
          {% if section.settings.menu %}
            {% for link in section.settings.menu.links %}
              <a class="block mx-3 hover:underline" href="{{ link.url }}">{{ link.title }}</a>
            {% endfor %}
          {% else %}
            <p>Missing menu</p>
          {% endif %}
          <p class="mx-3">Â© FarSea.dk {{ "now" | date: "%Y" }}</p>
        </div>

        {% if section.settings.payment_icons %}
          <div class="mt-3"> 
            {{ section.settings.payment_icons | image_url: height: 70 | image_tag: class: "payment-icons h-[28px] w-auto object-contain mx-auto md:ml-auto md:mr-0" }}
          </div>
        {% endif %}

      </div>

    </div>

  </div>

</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "label": "Logo",
      "id": "logo",
      "type": "image_picker"
    },
    {
      "label": "Logo Width",
      "id": "logo_width",
      "type": "range",
      "min": 50,
      "max": 200,
      "step": 2,
      "unit": "px",
      "default": 100
    },
    {
      "label": "Payment Icons",
      "id": "payment_icons",
      "type": "image_picker"
    },
    {
      "label": "Menu",
      "id": "menu",
      "type": "link_list"
    }
  ]
}
{% endschema %}