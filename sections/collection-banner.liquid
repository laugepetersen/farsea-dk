<div class="py-section relative">
  <div class="container relative z-10">
    <h1 class="m-0 h2 text-white">{{ collection.title }}</h1>
  </div>

  <div class="absolute top-0 left-0 w-full h-full z-0 bg-ocean-500">
    {%- if collection.featured_image -%}
      {{ collection.featured_image | image_url: width: 1600 | image_tag: class: 'absolute top-0 left-0 w-full h-full object-cover' }}
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Collection Banner",
  "class": "collection-banner",
  "tag": "section",
  "settings": [

  ]
}
{% endschema %}
